<div id="<%= dom_id category %>" class="border p-4 mb-4 rounded-md shadow-md bg-white">
  <div class="flex items-center justify-between">
    <span class="text-lg font-semibold"><%= category.name %></span>
    <div class="flex space-x-2">
      <%= link_to 'Editar', edit_category_path(category), class: 'text-blue-500 hover:text-blue-700' %>
      <%= link_to 'Eliminar', category_path(category), method: :delete, data: { turbo_confirm: 'common.confirm' }, class: 'text-red-500 hover:text-red-700' %>
    </div>
  </div>
</div>

