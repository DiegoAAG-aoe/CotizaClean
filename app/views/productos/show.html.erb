<%= image_tag @producto.photo, width: 100 if @producto.photo.attached? %>

<h1 class='nombre'><%= @producto.Nombre %></h1>

<p class='tipo'>Tipo: <%= @producto.Tipo%></p>

<p class='descripcion'>Descripcion: <%= @producto.Descripcion%></p>

<p class='marca'>Marca: <%= @producto.Marca%></p>

<span class='precio'>$<%= @producto.precio %></span>

<%= link_to 'Editar producto', edit_producto_path(@producto) if current_user %>

<%= link_to 'Eliminar producto', producto_path(@producto), data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro?' } if current_user %>

<% if @producto.favoritos.find_by(user: current_user) %>
    <%= link_to 'Quitar de Favoritos💔', favorito_path(@producto.id), data: { turbo_method: :delete }  if current_user %>
<% else %>
    <%= link_to 'Añadir a Favoritos❤️', favoritos_path(producto_id: @producto.id), data: { turbo_method: :post }  if current_user %>
<% end %>

