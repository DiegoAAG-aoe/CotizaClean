<br>
<% if @producto.photo.attached? %>
  <%= image_tag @producto.photo, width: 100, class: 'mb-4 rounded-md shadow-md' %>
<% end %>

<h1 class='nombre text-2xl font-bold mb-2'><%= @producto.Nombre %></h1>

<p class='tipo text-gray-600 mb-2'>Tipo: <%= @producto.Tipo %></p>

<p class='descripcion text-gray-700 mb-2'>Descripcion: <%= @producto.Descripcion %></p>

<p class='marca text-gray-600 mb-2'>Marca: <%= @producto.Marca %></p>

<span class='precio text-xl font-bold text-green-500 mb-4'>$<%= @producto.precio %></span>

<% if current_user && current_user.admin? %>
<%= link_to 'Editar producto', edit_producto_path(@producto), class: 'text-blue-500 hover:text-blue-700 mr-4' %>
<%= link_to 'Eliminar producto', producto_path(@producto), data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro?' }, class: 'text-red-500 hover:text-red-700 mr-4' %>
<% end %>

<%= render partial: 'favorito', locals: { producto: @producto } %>

<div data-controller="websocket-product" data-productoid="<%= @producto.id %>"></div>

