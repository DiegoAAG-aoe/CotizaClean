<%= turbo_frame_tag 'categories' do %>
    <h1>Productos:</h1>
    
    <%= form_with url: productos_path, method: :get do |form| %>
        <%= form.text_field :query_text, placeholder: 'Ingrese Busqueda', onChange: 'this.form.requestSubmit()', value: params[:query_text] %>
        
        <%= form.number_field :min_price, placeholder: 'Precio minimo', onChange: 'this.form.requestSubmit()', value: params[:min_price] %>

        <%= form.number_field :max_price, placeholder: 'Precio maximo', onChange: 'this.form.requestSubmit()', value: params[:max_price] %>

        <%= form.select :order_by, options_for_select(Producto::ORDER_BY.keys.map { | order | [order, order] }, params[:order_by]), {}, { onChange: 'this.form.requestSubmit()' } %>
    <% end %>

    <%= link_to 'All', productos_path() %>

    <%= render partial: 'category', collection: @categories %>

  <%= turbo_frame_tag :productos do %>
    <%= turbo_frame_tag "productos-#{@pagy.page}", class: 'productos' do %>
      <%= render partial: 'producto', collection: @productos %>
      <%= turbo_frame_tag "productos-#{@pagy.next}", class: 'productos', src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next %>
    <% end %>
  <% end %>
<% end %>